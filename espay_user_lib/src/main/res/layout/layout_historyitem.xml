<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_getcashtime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="提现时间"
            android:textColor="@color/easou_em6_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_getcashvalue"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="金额"
            android:textColor="@color/easou_em6_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_getcashcode"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="红包码"
            android:textColor="@color/easou_em6_color"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_history_one"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_cashtimevalue_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="2020-02-02 18:01"
            android:textColor="@color/easou_em6_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cashvalue_one"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="100元"
            android:textColor="@color/easou_em6_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cashcodevalue_one"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_greenbutton"
            android:gravity="center"
            android:maxLines="1"
            android:text="查看"
            android:textColor="@color/c_white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_history_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_cashtimevalue_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="2020-02-02 18:01"
            android:textColor="@color/easou_em6_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cashvalue_two"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="100元"
            android:textColor="@color/easou_em6_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cashcodevalue_two"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_greenbutton"
            android:gravity="center"
            android:maxLines="1"
            android:text="查看"
            android:textColor="@color/c_white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_history_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_cashtimevalue_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="2020-02-02 18:01"
            android:textColor="@color/easou_em6_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cashvalue_three"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="100元"
            android:textColor="@color/easou_em6_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cashcodevalue_three"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_greenbutton"
            android:gravity="center"
            android:maxLines="1"
            android:text="查看"
            android:textColor="@color/c_white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>