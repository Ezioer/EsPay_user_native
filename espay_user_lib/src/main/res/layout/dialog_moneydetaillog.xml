<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bg_whitedialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="红包明细"
        android:textSize="20sp"
        android:id="@+id/tv_history_title"
        android:layout_centerHorizontal="true"
        android:textColor="@color/easou_em6_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/icon_close"
        android:padding="10dp"
        android:id="@+id/iv_moneydetail_close"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_below="@id/tv_history_title"
        android:id="@+id/list_moneylog"
        tools:listitem="@layout/item_moneydetaillog"
        android:layout_width="match_parent"
        android:layout_height="400dp" />
</RelativeLayout>