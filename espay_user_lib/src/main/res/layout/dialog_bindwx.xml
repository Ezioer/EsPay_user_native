<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_loginbg"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_close_bindwx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/icon_close" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fillViewport="true"
        android:layout_below="@id/iv_close_bindwx"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_step_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/easou_thin1_color"
            android:textSize="16sp" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bindcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollview"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bindcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="@string/bindcode"
            android:textColor="@color/c_white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_bindcode_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/c_red"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="ABCDE" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_copyandbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_bindcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_bind"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="4dp"
        android:paddingRight="20dp"
        android:paddingBottom="4dp"
        android:text="@string/copyandbind"
        android:textColor="@color/c_white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_refreshstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_copyandbind"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_bind"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="4dp"
        android:paddingRight="20dp"
        android:paddingBottom="4dp"
        android:text="@string/refreshstate"
        android:textColor="@color/c_white"
        android:textSize="18sp" />

</RelativeLayout>