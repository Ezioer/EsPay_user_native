<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/c_737171">

        <ImageView
            android:id="@+id/iv_da_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/deleteaccount_title"
            android:textColor="@color/payeco_textColorWhite"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollview_content"
        android:fillViewport="true"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="0dp">

        <RelativeLayout
            android:id="@+id/rl_da_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:id="@+id/ll_da_info"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_da_infotitle"
                    android:textColor="@color/payeco_textColorBlack"
                    android:textSize="26sp"
                    android:layout_marginTop="10dp"
                    android:text="@string/deleteaccount_infotitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:id="@+id/tv_da_account"
                        android:textColor="@color/payeco_textColorBlack"
                        android:textSize="16sp"
                        android:text="@string/deleteaccount_account"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:background="@drawable/bg_edittext_logout"
                        android:text=""
                        android:textSize="16sp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:id="@+id/et_da_account"
                        android:textColor="@color/easou_thin3_color"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:id="@+id/tv_da_name"
                        android:textColor="@color/payeco_textColorBlack"
                        android:textSize="16sp"
                        android:text="@string/deleteaccount_name"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:background="@drawable/bg_edittext_logout"
                        android:hint="@string/deleteaccount_name"
                        android:textSize="16sp"
                        android:id="@+id/et_da_name"
                        android:paddingLeft="10dp"
                        android:textColor="@color/easou_thin3_color"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:id="@+id/tv_da_idnum"
                        android:textColor="@color/payeco_textColorBlack"
                        android:textSize="16sp"
                        android:text="@string/deleteaccount_idnum"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:background="@drawable/bg_edittext_logout"
                        android:hint="@string/deleteaccount_idnum"
                        android:textSize="16sp"
                        android:paddingLeft="10dp"
                        android:id="@+id/et_da_idnum"
                        android:textColor="@color/easou_thin3_color"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_da_bindphone"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:id="@+id/tv_da_bindphone"
                        android:textColor="@color/payeco_textColorBlack"
                        android:textSize="16sp"
                        android:text="@string/deleteaccount_bindphonenum"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/et_da_phonenum"
                        android:background="@drawable/bg_edittext_logout"
                        android:hint=""
                        android:textSize="16sp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/easou_thin3_color"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_da_code"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:id="@+id/tv_da_vercode"
                        android:textColor="@color/payeco_textColorBlack"
                        android:textSize="16sp"
                        android:text="@string/deleteaccount_vercode"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/et_da_vercode"
                        android:background="@drawable/bg_edittext_logout"
                        android:hint="@string/vercode"
                        android:textSize="16sp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/easou_thin3_color"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0.67"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_da_getcode"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:background="@drawable/bg_getcode"
                        android:textColor="@color/c_blue"
                        android:text="@string/getvercode"
                        android:layout_width="60dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_da_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </ScrollView>

    <View
        android:background="@color/c_737171"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <CheckBox
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/matchall"
        android:id="@+id/cb_da_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <Button
            android:text="下一步"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/btn_da_next"
            android:textSize="16sp"
            android:enabled="true"
            android:background="@color/c_blue"
            android:textColor="@color/payeco_textColorWhite"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:text="放弃"
            android:visibility="gone"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/btn_da_cancel"
            android:textSize="16sp"
            android:background="@color/c_blue"
            android:textColor="@color/payeco_textColorWhite"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:text="同意注销"
            android:visibility="gone"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/btn_da_ok"
            android:textSize="16sp"
            android:background="@color/c_blue"
            android:textColor="@color/payeco_textColorWhite"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>